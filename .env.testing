# ===============================================
# Laravel Development Environment Configuration
# ملف بيئة التطوير لنظام V5
# ===============================================

# Application Basic Configuration
APP_NAME="نظام V5 - نظام إدارة المبيعات المتقدم"
APP_ENV=testing
APP_KEY=base64:ZPzMwrtpHph0cabGBq/m27ZhnhY511UsB9PFS2gvlt4=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Language Configuration - Development
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

# Security & Maintenance
APP_MAINTENANCE_DRIVER=file

# PHP Configuration for Development
PHP_CLI_SERVER_WORKERS=4

# Password Hashing Configuration
BCRYPT_ROUNDS=12
HASH_DRIVER=bcrypt

# Logging Configuration - Development Optimized
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
# For production, use: LOG_LEVEL=warning, LOG_STACK=daily

# Database Configuration - Development
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=V5
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration - Development
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_COOKIE_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
# For production, use: SESSION_DRIVER=redis, SESSION_ENCRYPT=true

# Cache Configuration - Development
CACHE_STORE=file
CACHE_PREFIX=v5_dev_cache
# For production, use: CACHE_STORE=redis

# Redis Configuration (Optional for Development)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration - Development (Sync for simplicity)
QUEUE_CONNECTION=sync
# For production, use: QUEUE_CONNECTION=redis

# Broadcast Configuration
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Mail Configuration - Development (Mailpit for testing)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="dev@v5-system.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Optional - Development)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Performance Monitoring (Development Only)
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL=http://localhost:8000

# Security Headers (Disabled for Development)
# SESSION_COOKIE_SECURE=true
# FORCE_HTTPS=true

# Development Specific Settings
