# Test Database Configuration
DB_TEST_CONNECTION=mysql
DB_TEST_HOST=127.0.0.1
DB_TEST_PORT=3306
DB_TEST_DATABASE=V5_test
DB_TEST_USERNAME=root
DB_TEST_PASSWORD=

# CORS Configuration for Development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ===============================================
# DEVELOPMENT OPTIMIZATIONS
# ===============================================
# These settings are optimized for local development
# and should be changed for production deployment

# Auto-reload settings
APP_AUTO_RELOAD=true
APP_FILE_WATCHER=true

# Development-only features
DEVELOPMENT_MODE=true
ENABLE_QUERY_LOG=true
ENABLE_ROUTE_LOGGING=true

# Frontend Hot Module Replacement
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost

# Development Database Seeding
DB_SEED_ON_MIGRATE=true
DEV_CREATE_SAMPLE_DATA=true

# ===============================================
# PRODUCTION MIGRATION NOTES
# ===============================================
# When deploying to production, change:
# - APP_ENV=production
# - APP_DEBUG=false
# - APP_URL=https://yourdomain.com
# - SESSION_DRIVER=redis
# - CACHE_STORE=redis
# - QUEUE_CONNECTION=redis
# - SESSION_ENCRYPT=true
# - LOG_LEVEL=warning
# - SESSION_COOKIE_SECURE=true
# - FORCE_HTTPS=true
# - TELESCOPE_ENABLED=false
# - DEBUGBAR_ENABLED=false