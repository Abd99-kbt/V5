# ===============================================
# Local Development Environment Configuration
# نظام V5 - إعدادات التطوير المحلي
# ===============================================

# Application Basic Configuration
APP_NAME="نظام V5 - V5 System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Language Configuration
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

# Security & Maintenance (Development Safe)
APP_MAINTENANCE_DRIVER=file

# PHP Configuration
PHP_CLI_SERVER_WORKERS=4

# Password Hashing Configuration
BCRYPT_ROUNDS=10

# Logging Configuration (Development)
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (Local Development)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=V5
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration (Development Safe)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration (Development Safe)
CACHE_STORE=file
CACHE_PREFIX=

# Redis Configuration (Optional - Disabled for Local)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration (Development Safe)
QUEUE_CONNECTION=sync

# Broadcast Configuration
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local

# Mail Configuration (Development - Mailpit)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@v5.local"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Not used in local development)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"

# ===============================================
# DEVELOPMENT SPECIFIC SETTINGS
# ===============================================

# Debug Bar (Development Only)
DEBUGBAR_ENABLED=true

# Telescope (Development Only)
TELESCOPE_ENABLED=false

# Security Headers (Disabled for Development)
# SESSION_COOKIE_SECURE=false
# FORCE_HTTPS=false

# ===============================================
# LOCAL DATABASE SETUP NOTES
# ===============================================
# 1. Create database: v5_development
# 2. Grant permissions to user: root
# 3. No password required for local development
# 4. Run: php artisan migrate --seed
#
# MySQL Commands:
# CREATE DATABASE v5_development CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
# GRANT ALL PRIVILEGES ON v5_development.* TO 'root'@'localhost';
# FLUSH PRIVILEGES;