# ===============================================
# Laravel Environment Configuration Template
# Copy this file to .env and configure your values
# ===============================================

# Application Basic Configuration
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# Language Configuration
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Security & Maintenance
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP Configuration
PHP_CLI_SERVER_WORKERS=4

# Password Hashing Configuration
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
# For production, use: LOG_LEVEL=warning, LOG_STACK=daily

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# For production, use: SESSION_DRIVER=redis, SESSION_ENCRYPT=true

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=
# For production, use: CACHE_STORE=redis

# Redis Configuration (Optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=database
# For production, use: QUEUE_CONNECTION=redis

# Broadcast Configuration
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Security Headers (Production Only)
# SESSION_COOKIE_SECURE=true
# FORCE_HTTPS=true

# Performance Monitoring (Development Only)
# TELESCOPE_ENABLED=true
# DEBUGBAR_ENABLED=true

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"

# ===============================================
# PRODUCTION RECOMMENDATIONS
# ===============================================
# When deploying to production, set:
# - APP_ENV=production
# - APP_DEBUG=false
# - APP_URL=https://yourdomain.com
# - SESSION_DRIVER=redis
# - CACHE_STORE=redis
# - QUEUE_CONNECTION=redis
# - SESSION_ENCRYPT=true
# - LOG_LEVEL=warning
# - SESSION_SECURE_COOKIE=true
# - FORCE_HTTPS=true
